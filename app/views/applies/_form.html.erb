
<br>
<br>

 <div class="mbr-section__container mbr-section__container--std-padding container" style="padding-top: 93px; padding-bottom: 93px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <div class="mbr-header--left mbr-header--std-padding">
                        <%= render_breadcrumbs %>
                        </div>
                        <div class="mbr-header mbr-header--center mbr-header--std-padding">

                            <h2 class="mbr-header__text" id="h2_correction">Apply Now</h2>
                            <hr>

                        </div>


<%= form_for(@apply) do |f| %>
  <% if @apply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apply.errors.count, "error") %> prohibited you from applying:</h2>

      <ul>
      <% @apply.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

                            <div class="form-group">
                            <%= f.text_field :first_name, placeholder: "First Name* ", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_field :last_name, placeholder: "Last Name*", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.email_field :email, placeholder: "Email*", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.phone_field :phone_number, placeholder: "Phone Number*", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_field :city, placeholder: "City*", :class=>"form-control" %>
                            </div>
                            <div class="form-group" id="change_place">
                                <%= f.select(:state, options_for_select(us_states), :selected => params[:state], prompt: "State*", :class =>'form-control') %>
                            </div>
                            <br>
                            <div class="form-group">
                            <%= f.text_field :purchase_price, placeholder: "Est. Purchase Price*", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_field :down_payment, placeholder: "Est. Down Payment*", :class=>"form-control" %>
                            </div>

                            <div class="form-group">
                                   <%= f.select(:contact_method, options_for_select(["Phone", "Email"]), :selected => params[:contact_method], prompt: "Preferred Contact*", :class =>'form-control') %>
                            </div>
                            <br>
                            <br>
                            <div class="mbr-buttons mbr-buttons--right"><button type="submit" class="mbr-buttons__btn btn btn-lg btn-info">Submit</button>
                            <a href="/" class="mbr-buttons__btn btn btn-lg btn-danger">Cancel</a>
                            </div>

                       <% end %>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


