 <div class="mbr-section__container mbr-section__container--std-padding container" style="padding-top: 93px; padding-bottom: 93px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <div class="mbr-header mbr-header--center mbr-header--std-padding">
                            <h2 class="mbr-header__text">LOG IN</h2>
                        </div>

                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                            <div class="form-group">

                            <%= f.email_field :email, placeholder: "Email* ", :class=>"form-control" %>
                            </div>
                            <div class="form-group">

                            <%= f.text_field :username, autofocus: true, placeholder: "Username*", :class=>"form-control" %>
                            </div>
                            <div class="form-group">

                            <%= f.password_field :password, placeholder: "Password*", autocomplete: "off", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                          <% if devise_mapping.rememberable? -%>

                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>

                          <% end -%>
                            </div>

                                                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                            </div>
                            <br>
                            <br>

                              <div class="mbr-buttons mbr-buttons--right"><button type="submit" class="mbr-buttons__btn btn btn-lg btn-info">LOG IN</button></div>

                       <% end %>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>



