 <div class="mbr-section__container mbr-section__container--std-padding container" style="padding-top: 93px; padding-bottom: 93px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                                                <div class="mbr-header--left mbr-header--std-padding">
                        <%= render_breadcrumbs %>
                        </div>
                        <div class="mbr-header mbr-header--center mbr-header--std-padding">

                            <h2 class="mbr-section__header" id="contacts1-15">Contact Us</h2>
                            <hr>
                        </div>


<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited you from contacting:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

                            <div class="form-group">
                            <%= f.text_field :first_name, placeholder: "First Name* ", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.email_field :email, placeholder: "Email*", :class=>"form-control" %>
                            </div>

                            <div class="form-group">
                            <%= f.text_area :question, :cols => "10", :rows => "10", placeholder: "Questions?*  Comments?*", :class=>"form-control" %>
                            </div>
                                                        <div class="form-group">
                        <%= f.text_field :phone_number, placeholder: "Phone Number (Optional)", :class=>"form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.select(:contact_method, options_for_select(["Phone", "Email"]), :selected => params[:contact_method], prompt: "Preferred Contact*", :class =>'form-control') %>
                            </div>
                            <br>
                            <br>
                            <div class="mbr-buttons mbr-buttons--right"><button type="submit" class="mbr-buttons__btn btn btn-lg btn-info">Submit</button>
                            <a href="/" class="mbr-buttons__btn btn btn-lg btn-danger">Cancel</a>
                            </div>

                       <% end %>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


